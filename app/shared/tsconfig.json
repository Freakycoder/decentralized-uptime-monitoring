{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "rootDir": "./src/",
    "outDir": "./output",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2018"],
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["output", "node_modules"]
}